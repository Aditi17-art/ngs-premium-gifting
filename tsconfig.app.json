{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": false,

    /* Module Resolution */
    "moduleResolution": "bundler",

    /* Path alias */
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
